
    <h1 class="text-center header-paragraph">Manage your threasholds groups</h1>
    <div class="panel-group" role="tablist" aria-multiselectable="true" id="accordion-1">
        <div class="panel panel-warning">
            <div class="panel-heading" role="tab">
                <h1 class="panel-title"><a role="button" data-toggle="collapse" data-parent="#accordion-1" aria-expanded="true" href="#accordion-1 .item-1">Tropical plants</a></h1></div>
            <div class="panel-collapse collapse in item-1" role="tabpanel">
                <div class="panel-body">
                    <p class="text-center description">This group is for plants which need a high level of water, heat and luminosity</p>
                    <form class="threshold" id='1'>
                        <fieldset>
                            <legend>Light thresholds</legend>
                            <div class="form-group">
                                <label class="control-label" for="light-upper-value">Upper Threshold</label>
                                <input class="form-control threshold-input light-upper-value" type="number" required="" value={{lightUpperValue}}>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="light-lower-value">Lower Threshold</label>
                                <input class="form-control threshold-input light-lower-value" type="number" required=""  value={{lightLowerValue}}>
                            </div>
                        </fieldset>
                        <fieldset>
                            <legend>Temperature thresholds</legend>
                            <div class="form-group">
                                <label class="control-label" for="temp-upper-value">Upper Threshold</label>
                                <input class="form-control threshold-input temp-upper-value" type="number" required="">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="temp-lower-value">Lower Threshold</label>
                                <input class="form-control threshold-input light-lower-value" type="number" required="">
                            </div>
                        </fieldset>
                        <fieldset>
                            <legend>Soil humidity thresholds</legend>
                            <div class="form-group">
                                <label class="control-label" for="moisture-upper-value">Upper Threshold</label>
                                <input class="form-control threshold-input moisture-upper-value" type="number">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="moisture-lower-value">Lower Threshold</label>
                                <input class="form-control threshold-input moisture-lower-value" type="number">
                            </div>
                        </fieldset>
                        <button class="btn btn-success btn-lg threshold-submit save-threshold" type="submit">Save </button>
                    </form>
                </div>
            </div>
        </div>
